// VERTEX
#version 330 core
layout(location = 0) in vec2 aPosition;
layout(location = 1) in vec2 aUVs;

out vec2 vUVs;

void main() {
    vUVs = aUVs;
    gl_Position = vec4(aPosition.x, aPosition.y, 0.0, 1.0);
}

// FRAGMENT
#version 330 core

in vec2 vUVs;

uniform sampler2D uTexture;
out vec4 oColor;

void main() {
    vec4 color = texture(uTexture, vUVs);
    oColor = color;
}